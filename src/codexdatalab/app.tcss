Screen {
    background: #0b0f1a;
    color: #e2e8f0;
}

#root {
    layout: horizontal;
    height: 100%;
    padding: 1 1;
}

#menu {
    width: 36;
    border: round #334155;
    background: #0b1220;
    padding: 1 1;
    margin: 0 2 0 0;
}

#menu .title {
    color: #38bdf8;
    text-style: bold;
}

#menu .subtitle {
    color: #94a3b8;
}

#menu .meta {
    color: #94a3b8;
    margin-top: 1;
}

#menu ListView {
    margin-top: 1;
    height: 1fr;
}

ListView > .list--highlight {
    background: #1f2937;
    color: #f8fafc;
}

#right {
    layout: vertical;
    width: 1fr;
}

#main-tabs {
    height: 1fr;
    margin: 0 0 1 0;
}

#table-body {
    layout: horizontal;
    height: 1fr;
}

#data-table {
    width: 1fr;
    height: 1fr;
    border: round #1f2937;
}

#stats-panel {
    width: 32;
    height: 1fr;
    border: round #334155;
    background: #0f172a;
    padding: 1 1;
    margin: 0 0 0 1;
    color: #94a3b8;
}

#plot-body {
    layout: horizontal;
    height: 1fr;
}

#plot-controls {
    width: 32;
    border: round #334155;
    background: #0f172a;
    padding: 1 1;
}

#plot-meta {
    color: #94a3b8;
    margin-top: 1;
}

#plot-canvas {
    width: 1fr;
    height: 1fr;
    border: round #1f2937;
    content-align: center middle;
    color: #94a3b8;
    margin-left: 1;
}

#plot-list {
    height: 1fr;
    margin-top: 1;
}

#recipe-body {
    layout: horizontal;
    height: 1fr;
}

#recipe-controls {
    width: 32;
    border: round #334155;
    background: #0f172a;
    padding: 1 1;
}

#recipe-list {
    height: 1fr;
    margin-top: 1;
}

#recipe-meta {
    width: 1fr;
    height: 1fr;
    border: round #1f2937;
    padding: 1 1;
    margin-left: 1;
    color: #94a3b8;
}

#chat {
    height: 12;
    border: round #334155;
    background: #111827;
    padding: 1 2;
}

#chat .title {
    color: #f59e0b;
    text-style: bold;
}

#chat .subtitle,
#chat .status,
#chat .hint,
#chat .help {
    color: #9ca3af;
}

#chat Input {
    background: #111827;
    border: tall #1f2937;
    color: #e5e7eb;
}

#chat-log {
    height: 1fr;
    border: round #1f2937;
    padding: 0 1;
    margin: 1 0;
    background: #0b1220;
}

#menu.focused {
    border: round #38bdf8;
}

#chat.focused {
    border: round #f59e0b;
}
